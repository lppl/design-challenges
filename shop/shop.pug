- const data = require(require('path').resolve('./data.js'));
- const products = data.products;
- const cart = data.cart;
- const filters = data.filters;

html(lang="en")

  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title XMass stuff x
    link(rel="stylesheet" href="../styles/dist/custom-tailwind.css")
    link(rel="stylesheet" href="./main.css")

  body.grid-areas-shop.text-slate-900
    x-key(x-event="toggle-element" value="filters" code="KeyF")
    x-nav.grid-in-top-nav Nav
    #filters.grid-in-filters.border-blue-600.border-1.rounded-md.inset(style="display:none")
        button.float-right(x-event="hide-element" value="filters")
          svg.w-6.h-6.pointer-events-none(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
            path(stroke-linecap='round' stroke-linejoin='round' d='M6 18L18 6M6 6l12 12')
        p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Earum eos et mollitia odio officiis perspiciatis porro praesentium quia sed totam. Aperiam consequuntur dolores laboriosam quas quia temporibus tenetur unde voluptates.
    x-cart.grid-in-cart Cart
    x-gallery-items.grid-in-content Gallery Items
    .grid-in-footer
      x-key(x-event="toggle-dialog" code="KeyO" value="control-panel")
      h4 Press `o` to open control panel
      dialog#control-panel.border.border-1.rounded-md.border-blue-600.p-4.fixed(class="top-[10dvh]" x-keys="disabled")
        x-key(x-event="close-dialog" value="control-panel" code="Escape" method="keydown")
        button.float-right(x-event="close-dialog" value="control-panel")
          svg.w-6.h-6.pointer-events-none(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
            path(stroke-linecap='round' stroke-linejoin='round' d='M6 18L18 6M6 6l12 12')
        h5.text-lg.font-bold.mb-4 Control Panel
        dl.grid.grid-cols-2.gap-4
          dt.font-bold.col-start-1 Toggle control:
          dd.col-start-2.flex.flex-col.gap-2
            button.border.border-1.bg-blue-100.rounded-full(x-event="show-element" value="filters") Open filters
            button.border.border-1.bg-blue-100.rounded-full(x-event="hide-element" value="filters") Close filters
            button.border.border-1.bg-blue-100.rounded-full(x-event="toggle-element" value="filters") Toggle filters

  script(type="module", src="../components/x-panel.js")
  script(type="module", src="../components/x-key.js")
  script(type="module", src="../utils/xEvents.js")
  script(type="module", src="../utils/logEvent.js")
  script(type="module", src="../events/events.js")
  script(type="module").
    import {registerXEvents} from "../utils/xEvents.js";
    registerXEvents();