.grid-in-footer
  x-key(x-event="toggle-dialog" code="KeyO" value="control-panel")
  h4 Press `o` to open control panel
  dialog#control-panel.border.border-1.rounded-md.border-blue-600.p-4.fixed(class="top-[10dvh]")
    x-key(x-event="close-dialog" value="control-panel" code="Escape" method="keydown")
    button.float-right(x-event="close-dialog" value="control-panel")
      svg.w-6.h-6.pointer-events-none(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
        path(stroke-linecap='round' stroke-linejoin='round' d='M6 18L18 6M6 6l12 12')
    h5.text-lg.font-bold.mb-4 Control Panel
    dl.grid.grid-cols-2.gap-4
      dt.font-bold.col-start-1 Sidebar filters:
      dd.col-start-2.flex.flex-col.gap-2
        button.border.border-1.bg-blue-100.rounded-full(x-event="show-element" value="sidebar-filters") Open filters
        button.border.border-1.bg-blue-100.rounded-full(x-event="hide-element" value="sidebar-filters") Close filters
        button.border.border-1.bg-blue-100.rounded-full(x-event="toggle-element" value="sidebar-filters") Toggle filters
      dt.font-bold.col-start-1 Cart:
      dd.col-start-2.flex.flex-col.gap-2
        button.border.border-1.bg-blue-100.rounded-full(x-event="show-element" value="cart") Open cart
        button.border.border-1.bg-blue-100.rounded-full(x-event="hide-element" value="cart") Close cart
        button.border.border-1.bg-blue-100.rounded-full(x-event="toggle-element" value="cart") Toggle cart

